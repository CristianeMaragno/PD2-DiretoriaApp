<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Amarelo"
    tools:context=".UploadBoletosActivity">

    <ImageButton
        android:id="@+id/buttonVoltarUploadBoletos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator"
        android:tint="@color/Vermelho"
        android:background="@null"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="UPLOAD BOLETOS"
        android:textColor="@color/Vermelho"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aluno(a)"
        app:layout_constraintBottom_toTopOf="@+id/spinner_upload_boleto_aluno"
        app:layout_constraintStart_toStartOf="@+id/spinner_upload_boleto_aluno" />

    <Spinner
        android:id="@+id/spinner_upload_boleto_aluno"
        android:layout_width="@dimen/width_spinner"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/spinner_upload_boleto_mes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/text_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mes"
        app:layout_constraintBottom_toTopOf="@+id/spinner_upload_boleto_mes"
        app:layout_constraintStart_toStartOf="@+id/spinner_upload_boleto_mes" />

    <Spinner
        android:id="@+id/spinner_upload_boleto_mes"
        android:layout_width="@dimen/width_spinner"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <Button
        android:id="@+id/button_upload_boleto_escolher_arquivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/spinner_upload_boleto_mes"
        app:layout_constraintTop_toBottomOf="@+id/spinner_upload_boleto_mes" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/button_upload_boleto_escolher_arquivo"
        app:layout_constraintTop_toTopOf="@+id/button_upload_boleto_escolher_arquivo" />

    <Button
        android:id="@+id/button_upload_boleto_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Enviar"
        android:textColor="@color/Amarelo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_upload_boleto_mes" />

</androidx.constraintlayout.widget.ConstraintLayout>